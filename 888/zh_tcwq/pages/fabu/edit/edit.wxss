.dt {
    width: 40rpx;
    height: 45rpx;
    margin-right: 30rpx;
}

.notice {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    z-index: 1500;
}

.notice>view:nth-child(1) {
    width: 100%;
    height: 100%;
    background: #000;
    top: 0;
    opacity: 0.5;
}

.notice>view:nth-child(2) {
    width: 70%;
    height: 600rpx;
    background: #fff;
    z-index: 2000;
    border-radius: 15rpx;
    overflow: auto;
    padding: 15rpx;
}

.base {
    width: 100%;
    height: auto;
    position: fixed;
    bottom: 0;
    z-index: 2000;
    background: #e5e5e5;
}

.procedures {
    width: 95%;
    margin: 0 auto 0;
    height: 60rpx;
    font-size: 26rpx;
    color: #666;
    line-height: 70rpx;
    text-align: right;
}

.base>view:first-child {
    height: 80rpx;
    width: 100%;
    background: #ED414A;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 30rpx;
}

.base>view:last-child {
    height: 80rpx;
    width: 100%;
    margin-top: 20rpx;
    color: #333;
    text-align: center;
    background: #fff;
    line-height: 80rpx;
    font-size: 30rpx;
}

.array {
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    color: #333;
    font-size: 30rpx;
    background: #fff;
    text-align: center;
    border-bottom: 1rpx solid #e5e5e5;
}

.header {
    background-color: #ed414a;
    padding: 15rpx 30rpx;
    color: white;
    font-size: 28rpx;
    position: relative;
}

.banner_list3 {
    padding: 20rpx 30rpx;
    font-size: 26rpx;
}

.label {
    width: 100%;
    height: auto;
    margin: 0 auto;
    background: #fff;
    padding-bottom: 10rpx;
}

.label>view {
    height: 50rpx;
    line-height: 50rpx;
    padding: 0rpx 20rpx;
    display: inline-block;
    margin-left: 10rpx;
    font-size: 26rpx;
    border-radius: 8rpx;
}

.header_title {
    text-align: center;
}

.header_right {
    position: absolute;
    right: 30rpx;
    top: 20rpx;
    font-size: 24rpx;
}

.selected1 {
    background: #fff;
    border: 1rpx solid #ed414a;
    color: #ed414a;
}

.selected2 {
    background: #ed414a;
    color: #fff;
}

.upload {
    width: 100%;
    height: auto;
    background: #fff;
}

.content {
    background-color: white;
    padding: 20rpx;
}

.content_miao {
    font-size: 28rpx;
    color: #333;
}

.miaoshu_box {
    width: 100%;
    height: 280rpx;
    margin-top: 20rpx;
    font-size: 28rpx;
}

.miaoshu {
    width: 100%;
    height: 280rpx;
    font-size: 26rpx;
}

.content_add {
    width: 25%;
    height: 100%;
    display: inline-block;
}

.border {
    border-bottom: 1rpx solid #eee;
}

.add_img {
    border: 1rpx solid #eee;
    margin-left: 5%;
}

.delete {
    width: 100%;
    height: 50rpx;
    top: 0;
    z-index: 500;
}

.delete image {
    width: 50rpx;
    height: 50rpx;
    right: 2%;
    top: 0;
}

.content_add>image {
    width: 90%;
    max-height: 150rpx;
}

.flex-center {
    position: relative;
    z-index: 100;
}

.banner {
    background-color: white;
    margin-top: 20rpx;
}

.banner_list {
    padding: 20rpx 30rpx;
    font-size: 26rpx;
}

.banner_name {
    width: 170rpx;
    font-size: 28rpx;
}

.banner_text {
    width: 500rpx;
    font-size: 28rpx;
}

.banner_list2 {
    padding: 10rpx 30rpx;
    font-size: 26rpx;
}

.banner_zhi {
    padding: 20rpx 30rpx;
    font-size: 26rpx;
    color: #ed414a;
    border-bottom: 1rpx solid #eee;
}

.banner_fuli {
    padding: 10rpx 30rpx;
    font-size: 26rpx;
    color: #666;
}

.confirm {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #fff;
    background-color: #ed414a;
    border-radius: 0rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    z-index: 500;
}