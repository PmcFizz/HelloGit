.search {
    padding: 24rpx 30rpx;
    display: flex;
    align-items: center;
}

.search_inp {
    width: 80%;
    background-color: white;
    border-radius: 50rpx;
    height: 65rpx;
    font-size: 26rpx;
    padding: 0rpx 30rpx;
}

.marry {
    width: 100%;
    overflow-x: hidden;
    height: auto;
    background-color: white;
}

.luntext {
    height: auto;
    width: 185%;
    display: flex;
    display: -webkit-box;
    flex-direction: column;
}

.luntext_Item {
    padding: 1rpx;
    flex: 1;
    margin-right: 20rpx;
}

.luntext_Item_text {
    padding: 30rpx;
    font-size: 30rpx;
    color: #666;
}

.search_img {
    width: 40rpx;
    height: 40rpx;
    margin-left: 30rpx;
}

.nav-box {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 26rpx;
}

.nav-detial {
    height: 65rpx;
    background-color: white;
    margin: 26rpx 0 0 30rpx;
    padding: 0 24rpx;
    font-size: 26rpx;
    text-align: center;
    line-height: 65rpx;
}

.markets {
    width: 100%;
    margin-bottom: 24rpx;
    background-color: white;
}

.marketinfo {
    width: 690rpx;
    margin-left: 30rpx;
    margin-top: 23rpx;
    position: relative;
}

.market-logo {
    width: 104rpx;
    height: 104rpx;
    display: inline-block;
}

.market-title {
    position: absolute;
    top: 0;
    left: 90rpx;
    margin-top: 10rpx;
    vertical-align: top;
    margin-left: 26rpx;
    color: rgb(30,173,240);
    font-size: 30rpx;
}

.top {
    position: absolute;
    top: 60rpx;
    left: 120rpx;
    width: 70rpx;
    height: 44rpx;
    padding: 0rpx;
    line-height: 44rpx;
    font-size: 28rpx;
    background-color: #FF8F0B;
    color: white;
}

.serve {
    position: absolute;
    top: 60rpx;
    left: 200rpx;
    width: 122rpx;
    height: 44rpx;
    padding: 0rpx;
    line-height: 44rpx;
    font-size: 28rpx;
    background-color: #1CDBA7;
    color: white;
}

.cheap {
    position: absolute;
    top: 60rpx;
    left: 340rpx;
    font-size: 28rpx;
}

.cheap-img {
    width: 30rpx;
    height: 35rpx;
}

.tel {
    width: 204rpx;
    height: 58rpx;
    float: right;
    vertical-align: center;
    margin-top: 22rpx;
    border-radius: 10rpx;
}

.marketintro {
    padding: 0 30rpx;
    padding-top: 30rpx;
    padding-bottom: 26rpx;
    color: rgb(102,102,102);
    font-size: 26rpx;
    line-height: 48rpx;
}

.imgnum {
    padding: 0 30rpx;
    font-size: 26rpx;
    line-height: 48rpx;
    display: inline-block;
    color: #EE4E55;
}

.marketimg {
    height: 158rpx;
    padding: 0 30rpx;
    display: flex;
}

.marketimg>image {
    width: 158rpx;
    height: 158rpx;
    margin-right: 20rpx;
}

.view {
    padding: 0 30rpx;
    height: 143rpx;
    position: relative;
}

.viewtime {
    float: left;
    font-size: 24rpx;
    color: rgb(102,102,102);
    margin-top: 22rpx;
}

.more {
    font-size: 24rpx;
    color: rgb(39,122,161);
    float: right;
    margin-top: 22rpx;
}

.viewnum {
    background-color: #F1F1F1;
    width: 100%;
    height: 54rpx;
    margin-top: 16rpx;
    float: left;
    line-height: 44rpx;
    color: #727272;
    font-size: 24rpx;
}

.kuang {
    position: absolute;
    content: "";
    border-width: 15rpx;
    border-style: solid;
    border-color: transparent transparent #F1F1F1 #F1F1F1;
    transform: rotate(135deg);
    left: 60rpx;
    top: 60rpx;
}

.views {
    margin-left: 18rpx;
    display: inline-block;
    width: 37rpx;
    height: 20rpx;
}

.viewsnum {
    margin-left: 20rpx;
    display: inline-block;
    height: 20rpx;
    margin-right: 7rpx;
    color: #2CB2F0;
    font-size: 24rpx;
}

.zan {
    margin-left: 38rpx;
    display: inline-block;
    width: 33rpx;
    height: 33rpx;
    margin-top: 10rpx;
}

.zannum {
    margin-left: 20rpx;
    display: inline-block;
    height: 20rpx;
    margin-right: 7rpx;
    color: #2CB2F0;
    font-size: 24rpx;
}

.clearfix {
    overflow: auto;
    _height: 1%;
}

.tab-space {
    height: 98rpx;
    width: 100%;
}

.tab {
    height: 98rpx;
    width: 100%;
    background-color: white;
    display: flex;
    position: fixed;
    bottom: 0px;
}

.tab>view {
    width: 15%;
    margin-left: 4%;
    text-align: center;
}

.tab image {
    width: 34rpx;
    height: 34rpx;
    margin-top: 16rpx;
}

.tab>view {
    font-size: 24rpx;
    color: rgb(102,102,102);
}