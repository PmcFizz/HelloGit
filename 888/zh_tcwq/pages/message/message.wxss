page {
    background: #ebecf1;
}

.container {
    width: 100%;
    height: 100%;
    background: #fff;
}

.header {
    width: 100%;
    height: 100rpx;
    border-bottom: 10rpx solid #ebecf1;
}

.header>view {
    float: left;
    line-height: 100rpx;
    font-size: 30rpx;
}

.header>view:nth-child(1) {
    width: 20%;
    height: 100%;
    text-align: center;
    box-sizing: border-box;
}

.header>view:nth-child(2) {
    width: 80%;
    height: 100%;
}

.header>view scroll-view {
    width: 100%;
    height: 100%;
    white-space: nowrap;
}

.loading {
    width: 100%;
    height: 60rpx;
    background: #fff;
    color: #999;
    line-height: 60rpx;
    text-align: center;
    font-size: 22rpx;
}

.loading image {
    width: 69rpx;
    height: 15rpx;
}

.click1 {
    border-bottom: 5rpx solid #fff;
}

.click2 {
    border-bottom: 5rpx solid #ED414A;
}

.click4 {
    border-bottom: 5rpx solid #fff;
}

.click3 {
    color: #ED414A;
    border-bottom: 5rpx solid #ED414A;
}

.header>view scroll-view view {
    width: auto;
    display: inline-block;
    height: 100%;
    padding: 0 25rpx;
    box-sizing: border-box;
}

.figure {
    width: 100%;
    height: 400rpx;
}

.figure swiper image {
    width: 100%;
    height: 100%;
}

.figure swiper {
    width: 100%;
    height: 100%;
}

.message_hd {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 160rpx;
    width: 100%;
}

.message_hd .title {
    width: 60%;
}

.message_hd>image {
    width: 32%;
    height: 100%;
}

.message_list {
    width: 100%;
    height: auto;
}

.message_list>view {
    width: 95%;
    height: auto;
    margin: 0 auto 0;
    padding: 20rpx 0 0;
    background: #fff;
    border-bottom: 1rpx solid #e5e5e5;
}

.message_list>view:last-child {
    border: none;
}

.title {
    height: auto;
    line-height: 50rpx;
    font-size: 32rpx;
    padding-bottom: 10rpx;
}

.message_image {
    height: 160rpx;
    width: 100%;
}

.message_image>image {
    width: 32%;
    height: 100%;
}

.message_image>image:nth-child(2) {
    margin-left: 2%;
    margin-right: 2%;
}

.message_info {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    color: #999;
    font-size: 22rpx;
}

.message_info view {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.message_info image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.message_info view>text:nth-child(1) {
    margin-right: 30rpx;
}

.release {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    position: fixed;
    bottom: 100rpx;
    background: #fff;
    right: 40rpx;
}

.release image {
    width: 100%;
    height: 100%;
}

.welfare {
    margin-top: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.welfare image {
    width: 240rpx;
    height: 320rpx;
}