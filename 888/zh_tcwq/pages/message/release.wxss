.container {
    width: 100%;
    height: 100%;
}

.header {
    width: 100%;
    height: 60rpx;
    background: #f2f2f2;
    font-size: 28rpx;
    text-indent: 2.5%;
    line-height: 60rpx;
    color: #a3a3a3;
}

.classifation {
    width: 100%;
    height: 120rpx;
    background: #fff;
}

.classifation>view {
    width: 95%;
    height: 70rpx;
}

.classifation>view scroll-view {
    width: 100%;
    height: 100%;
    white-space: nowrap;
}

.classifation>view scroll-view view {
    border-radius: 10rpx;
    padding: 0 15rpx;
    height: 48rpx;
    margin-right: 30rpx;
    display: inline-block;
    line-height: 48rpx;
    font-size: 26rpx;
    width: auto;
    margin-top: 5rpx;
}

.normal {
    border: 1rpx solid #b9b9b9;
    color: #b9b9b9;
}

.bold {
    border: 3rpx solid #ed414a;
    color: #ed414a;
}

.body {
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 20rpx;
}

.write {
    width: 95%;
    height: auto;
    margin: 0 auto 0;
}

.write>view:nth-child(1) {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #666;
    border-bottom: 1rpx solid #e5e5e5;
}

.write>view input {
    width: 100%;
    height: 100%;
    font-size: 26rpx;
}

.write>view textarea {
    width: 100%;
    height: 100%;
    margin-top: 20rpx;
    font-size: 26rpx;
    min-height: 200rpx;
    line-height: 40rpx;
}

.write>view:nth-child(2) {
    width: 100%;
    height: auto;
    min-height: 280rpx;
    line-height: 80rpx;
    color: #666;
}

.message_image {
    width: 25%;
    height: 180rpx;
    background: red;
    margin-top: 10rpx;
    display: inline-block;
    box-sizing: border-box;
    border: 1rpx solid #e5e5e5;
}

.message_image image {
    width: 100%;
    height: 100%;
}

.message_image1 {
    width: 25%;
    height: 180rpx;
    margin-top: 20rpx;
    display: inline-block;
}

.message_image1 image {
    width: 95%;
    height: 100%;
    left: 0;
    top: 0;
    display: block;
}

.message_image1>view {
    width: 40rpx;
    height: 40rpx;
    right: 2.5%;
    top: 0;
}

.append {
    width: 100%;
    height: 80rpx;
    background: #f6f6f6;
    position: fixed;
    bottom: 0;
    font-size: 26rpx;
    line-height: 100rpx;
}

.append view {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.append>view {
    color: #fff;
    text-align: center;
}

.append>view:nth-child(1) {
    float: left;
}

.append>view:nth-child(2) {
    overflow: hidden;
    float: right;
}

.append>view button {
    width: 100%;
    height: 100%;
    margin: 0 auto 0;
    font-size: 26rpx;
    padding: 0;
    color: #fff;
    line-height: 80rpx;
    background: #ed414a;
    text-align: center;
}

.append>view button::after {
    border: none;
}

.increase2 {
    border-bottom: 1rpx solid #e5e5e5;
    border-top: 1rpx solid #e5e5e5;
}

.increase3 {
    padding-bottom: 120rpx;
}