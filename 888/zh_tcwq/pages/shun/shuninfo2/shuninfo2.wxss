.footer {
    width: 100%;
    height: 90rpx;
    background: #fff;
    position: fixed;
    bottom: 0;
    z-index: 100;
}

.footer button {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: none;
    z-index: 50000;
}

.footer button:after {
    border: none;
}

.footer>view {
    height: 100%;
    box-sizing: border-box;
    float: left;
}

.footer>view:nth-child(1) {
    width: 20%;
}

.footer>view:nth-child(2) {
    width: 20%;
}

.footer>view:nth-child(3) {
    width: 20%;
}

.footer>view:nth-child(4) {
    width: 40%;
    text-align: center;
    background: #ed414a;
    color: #fff;
    overflow: hidden;
}

.icon {
    width: 100%;
    height: 60%;
}

.icon image {
    width: 45rpx;
}

.nav_phone>view:nth-child(1) {
    height: 50%;
    font-size: 28rpx;
    width: 100%;
    line-height: 60rpx;
}

.nav_phone>view:nth-child(2) {
    height: 50%;
    width: 100%;
    font-size: 26rpx;
    line-height: 40rpx;
}

.nav_title {
    width: 100%;
    height: 40rpx;
    font-size: 24rpx;
    line-height: 40rpx;
}

.ride {
    width: 100%;
    overflow-x: hidden;
}

.banner {
    margin-top: 15rpx;
    background-color: white;
    padding: 20rpx 20rpx 70rpx;
}

.header {
    padding: 10rpx 0rpx 30rpx;
}

.touxiang {
    width: 120rpx;
    height: 120rpx;
}

.header_right {
    margin-left: 20rpx;
    width: 550rpx;
}

.header_title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.header_cart {
    font-size: 22rpx;
    background-color: #1EE0A5;
    color: white;
    padding: 7rpx 15rpx;
    border-radius: 6rpx;
}

.tagname {
    width: 100%;
    height: auto;
    margin-top: 20rpx;
}

.tagname>view {
    width: auto;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 25rpx;
    margin-right: 20rpx;
    font-size: 22rpx;
    border-radius: 10rpx;
    border: 1rpx solid #ED414A;
    color: #ED414A;
    display: inline-block;
}

.header_time {
    color: #999;
    font-size: 22rpx;
}

.section {
    border-top: 1rpx solid #ddd;
    border-bottom: 1rpx solid #ddd;
    padding-bottom: 25rpx;
    font-size: 28rpx;
    color: #666;
}

.section_one {
    margin-top: 30rpx;
}

.blue_box {
    border: 10rpx solid #54D1D5;
}

.red_box {
    border: 10rpx solid #F7574F;
}

.red_box,.blue_box {
    border-radius: 50%;
    width: 20rpx;
    height: 20rpx;
    margin-right: 15rpx;
}

.carimg {
