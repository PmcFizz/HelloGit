.home {
    width: 100%;
    overflow-x: hidden;
}

.body {
    width: 100%;
    height: auto;
    background: orange;
}

.banner {
    width: 100%;
    height: 360rpx;
}

.swiper-container {
    position: relative;
}

.swiper-container .swiper {
    height: 360rpx;
}

.swiper-container .swiper .img {
    width: 100%;
    height: 100%;
}

.dots {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 20rpx;
    display: flex;
    width: 238rpx;
    margin: auto;
    border-radius: 10rpx;
    height: 20rpx;
    justify-content: center;
}

.dot {
    margin: 4rpx 8rpx;
    width: 30rpx;
    height: 6rpx;
    background: rgb(255,255,255);
    border: rgb(218,69,70) solid 1rpx;
    border-radius: 8rpx;
    transition: all 0.6s;
}

.active {
    width: 30rpx;
    background: #f80;
}

.searchbox {
    height: 116rpx;
    padding: 0 30rpx;
    background-color: white;
    position: relative;
}

.input {
    font-size: 26rpx;
    color: #666;
    height: 64rpx;
    border: 5rpx solid #ff4847;
    width: 483rpx;
    position: absolute;
    top: 26rpx;
    padding-left: 40rpx;
    border-radius: 37rpx 0 0 37rpx;
}

.search {
    padding: 0;
    width: 158rpx;
    height: 72rpx;
    color: white;
    background-color: #ff4847;
    position: absolute;
    top: 26rpx;
    left: 555rpx;
    line-height: 74rpx;
    border-radius: 0 37rpx 37rpx 0;
}

.ad {
    margin-top: 24rpx;
    height: 64rpx;
    text-align: top;
    background-color: white;
}

.ad-icon {
    line-height: 64rpx;
    margin-top: 15rpx;
    margin-left: 30rpx;
    float: left;
    height: 35rpx;
    width: 40rpx;
}

.adinfo {
    margin-left: 32rpx;
    float: left;
    font-size: 26rpx;
    margin-top: 13rpx;
    width: 650rpx;
}

.classify {
    width: 100%;
    background: #fff;
}

.classify swiper-item {
    width: 100%;
    height: 1005;
}

.classify swiper-item view {
    width: 20%;
    float: left;
}

.classify swiper-item view .classify_logo {
    width: 100%;
    height: 90rpx;
}

.classify swiper-item view .classify_logo image {
    width: 65rpx;
    height: 65rpx;
    background: #fff;
}

.classify swiper-item view .classify_name {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
}

.join {
    width: 100%;
    height: 90rpx;
    padding: 0 20rpx;
    background-color: white;
    margin-top: 15rpx;
    position: relative;
}

.jion-img {
    display: inline-block;
    width: 79rpx;
    height: 79rpx;
    position: absolute;
    top: 15rpx;
}

.jion-one {
    font-size: 26rpx;
    display: inline-block;
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    top: 20rpx;
    left: 133rpx;
}

.jion-two {
    font-size: 26rpx;
    display: inline-block;
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    left: 133rpx;
    top: 63rpx;
}

.join-name {
    color: #ed4149;
    font-size: 26rpx;
}

.jiony {
    background-color: #ff6160;
    border-radius: 10rpx;
    width: 158rpx;
    font-size: 26rpx;
    height: 59rpx;
    color: white;
}

.jionbo {
    width: 500rpx;
    height: 35rpx;
    margin-left: 20rpx;
    line-height: 35rpx;
    font-size: 26rpx;
}

.enrrol {
    margin-top: 15rpx;
    background-color: white;
}

.enrrolwai {
    border-bottom: 1rpx solid #eee;
    padding: 20rpx;
}

.enrrolbox {
    width: 100%;
    height: 300rpx;
    position: relative;
    margin-bottom: 10rpx;
}

.enrrolimg {
    width: 100%;
    height: 300rpx;
    position: absolute;
    top: 0rpx;
    left: 0rpx;
    z-index: 1;
}

.enrroltype2,.enrroltype {
    position: absolute;
    right: -1rpx;
    top: 0rpx;
    background-color: white;
    z-index: 3;
    padding-left: 5rpx;
    padding-bottom: 5rpx;
}

.enrroltype>view {
    background-color: #C55F7B;
    color: white;
    font-size: 24rpx;
    text-align: center;
    padding: 8rpx 15rpx;
}

.enrroltype2>view {
    background-color: #4ED04B;
    color: white;
    font-size: 24rpx;
    text-align: center;
    padding: 8rpx 15rpx;
}

.entitle {
    font-size: 28rpx;
    color: #666;
}

.enaddress {
    font-size: 28rpx;
    color: #999;
    margin-top: 10rpx;
}

.entitle>view:nth-child(2) {
    color: #ff6160;
    font-size: 24rpx;
}

.enaddress>view:nth-child(1),.entitle>view:nth-child(1) {
    width: 75%;
}

.entime {
    width: 35rpx;
    height: 35rpx;
}

.enaddimg {
    width: 30rpx;
    height: 36rpx;
    margin-right: 8rpx;
}