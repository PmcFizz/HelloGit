.info {
    width: 100%;
    overflow-x: hidden;
}

.header {
    width: 100%;
    height: 460rpx;
    background-color: white;
    position: relative;
    z-index: 1;
    top: -1rpx;
    left: -1rpx;
    overflow: hidden;
}

.headerback {
    width: 100%;
    height: 460rpx;
}

.headerbox {
    background-color: rgba(0,0,0,0.5);
    width: 90%;
    height: 382rpx;
    position: absolute;
    top: -1rpx;
    left: -1rpx;
    padding: 40rpx;
    z-index: 3;
    color: white;
    font-size: 28rpx;
}

.headerbox>.flex-center {
    margin-bottom: 10rpx;
}

.headerlist {
    width: 100%;
    height: 140rpx;
    background-color: white;
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: -1rpx;
}

.headertitle {
    font-size: 36rpx;
    line-height: 60rpx;
    margin-bottom: 20rpx;
}

.timeimg {
    width: 35rpx;
    height: 35rpx;
    margin-right: 10rpx;
}

.timeimg2 {
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}

.timeimg3 {
    width: 28rpx;
    height: 36rpx;
    margin-right: 15rpx;
}

.headersan {
    width: 120%;
    height: 140rpx;
    position: absolute;
    z-index: 5;
    right: -20rpx;
    bottom: -95rpx;
    background-color: white;
    transform: rotate(-7deg);
}

.touxiang {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    right: 13rpx;
    top: -45%;
    z-index: 8;
    transform: rotate(7deg);
    border-radius: 50%;
}

.headerone {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #666;
    font-size: 28rpx;
}

.headerone>view:nth-child(1) {
    color: #ff6161;
    margin-bottom: 10rpx;
    font-size: 34rpx;
}

.huodong {
    border-top: 1rpx solid #eee;
    padding: 0rpx 30rpx;
    background-color: white;
}

.huodongtime {
    padding: 18rpx 0rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    color: #666;
    border-bottom: 1rpx solid #eee;
}

.huocontent {
    padding: 20rpx 0rpx;
}

.huoxuzhi {
    font-size: 30rpx;
    font-weight: bold;
    color: #06B7F9;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 15rpx;
    margin-top: 30rpx;
}

.huoxuzhi2 {
    font-size: 28rpx;
    color: #666;
    padding: 10rpx 0rpx;
}

.enroll {
    margin-top: 15rpx;
    background-color: white;
    padding: 20rpx;
    font-size: 28rpx;
    color: #666;
}

.shuxian {
    background-color: #ED414A;
    width: 15rpx;
    height: 30rpx;
    margin-right: 10rpx;
    margin-top: 5rpx;
}

.enrolltop {
    color: #ED414A;
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 15rpx;
}

.enrolluser {
    border-bottom: 1rpx solid #eee;
    padding: 15rpx 0rpx;
}

.enrolluser>image {
    width: 60rpx;
    height: 60rpx;
    margin-right: 15rpx;
    border-radius: 50%;
}

.userfont1 {
    color: #ED414A;
}

.chakan {
    color: #f98906;
    height: 90rpx;
    justify-content: center;
}

.chakan>image {
    width: 30rpx;
    height: 20rpx;
    margin-left: 20rpx;
}

.message {
    padding: 20rpx;
    background-color: white;
    margin-top: 15rpx;
}

.fabu {
    color: #ED414A;
    font-size: 32rpx;
    font-weight: bold;
}

.messagelist {
    display: flex;
    border-bottom: 1rpx solid #eee;
    padding: 20rpx 0rpx;
    font-size: 28rpx;
    color: #666;
}

.usertouxiang {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.messagebox {
    margin-left: 15rpx;
    width: 550rpx;
    padding-top: 5rpx;
}

.username {
    color: #333;
}

.messagedui {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.mhuifu {
    color: #999;
}

.mhuifubox {
    background-color: #EEEEEE;
    border-radius: 4rpx;
    padding: 15rpx;
    position: relative;
    margin-top: 20rpx;
    width: 100%;
}

.kuang {
    position: absolute;
    content: "";
    border-width: 12rpx;
    border-style: solid;
    border-color: transparent transparent #eee #eee;
    transform: rotate(135deg);
    left: 60rpx;
    top: -10rpx;
    z-index: 1;
}

.mhuifulist {
    margin-bottom: 8rpx;
}

.mhuifulist>text:nth-child(1) {
    color: #06B7F9;
}

.nomore {
    height: 90rpx;
    text-align: center;
    line-height: 110rpx;
    color: #999;
    font-size: 28rpx;
}

.footerbox1 {
    width: 100%;
    height: 100rpx;
    margin-top: 20rpx;
}

.footer {
    height: 100rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    border-top: 2rpx solid #eee;
    background-color: white;
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.footbox {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #999;
}

.fshoucang {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 7rpx;
}

.fbaoming {
    width: 450rpx;
    background-color: #ED414A;
    color: white;
    border-radius: 50rpx;
    height: 70rpx;
    font-size: 30rpx;
    text-align: center;
    line-height: 70rpx;
}