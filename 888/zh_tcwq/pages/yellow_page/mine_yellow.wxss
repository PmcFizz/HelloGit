page {
    width: 100%;
    height: 100%;
    background: #fff;
}

.none {
    width: 100%;
    height: 100%;
}

.none>view:nth-child(1) {
    position: relative;
    width: 100%;
    height: 600rpx;
}

.none>view image {
    width: 80%;
    height: 400rpx;
    bottom: 0;
}

.none>view:nth-child(2) {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
}

.nav {
    width: 100%;
    height: 87rpx;
    border-top: 1rpx solid #e5e5e5;
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
}

.nav>view {
    width: 25%;
    height: 100%;
    display: inline-block;
    vertical-align: top;
    position: relative;
}

.nav>view view:nth-child(1) {
    width: 100%;
    height: 60rpx;
}

.nav>view view:nth-child(2) {
    width: 100%;
    height: 26rpx;
    font-size: 19rpx;
    line-height: 26rpx;
    text-align: center;
    font-weight: 595;
    position: absolute;
    bottom: 0;
}

.nav>view view image {
    width: 49rpx;
    height: 49rpx;
    bottom: 0;
}

.yelist {
    margin-bottom: 30rpx;
    background: #fff;
    margin-top: 20rpx;
    padding-bottom: 90rpx;
}

.yellow_list {
    width: 95%;
    padding: 20rpx 0;
    margin: 0 auto 0;
    border-bottom: 1rpx solid #f7f7f7;
}

.list_head {
    width: 100%;
    height: 150rpx;
}

.list_head>view {
    float: left;
    font-size: 26rpx;
    height: 100%;
}

.list_head>view:nth-child(1) {
    width: 20%;
}

.yellow_logo {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    left: 0;
}

.yellow_tel {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}

.list {
    width: 50%;
}

.list>view image {
    width: 30rpx;
    height: 30rpx;
    float: left;
}

.list>view text {
    float: left;
    line-height: 30rpx;
    margin-left: 10rpx;
}

.list>view:nth-child(1) {
    font-size: 30rpx;
    line-height: 90rpx;
    height: 90rpx;
}

.list>view:nth-child(2) {
    font-size: 24rpx;
    height: 30rpx;
    line-height: 0rpx;
    vertical-align: top;
}

.list_head>view:nth-child(3) {
    width: 30%;
}

.tel_icon>view {
    width: 90rpx;
    height: 90rpx;
    right: 15%;
    background: #ED414A;
    border-radius: 50%;
}

.list_body {
    width: 100%;
    height: 50rpx;
    font-size: 26rpx;
    line-height: 40rpx;
}

.list_body>image {
    width: 30rpx;
    height: 35rpx;
    margin-right: 15rpx;
}

.list_body>text {
    vertical-align: top;
    display: inline-block;
}

.list_body>text:nth-child(3) {
    float: right;
    color: #ED414A;
    margin-right: 4%;
}

.refresh {
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 22rpx;
    text-align: center;
    color: #999;
}