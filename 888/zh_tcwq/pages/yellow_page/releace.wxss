.head {
    width: 100%;
    height: 300rpx;
    background: #fff;
}

.head>view {
    width: 240rpx;
    height: 250rpx;
    font-size: 24rpx;
    line-height: 50rpx;
    text-align: center;
}

.head>view image {
    width: 200rpx;
    margin-left: 20rpx;
    height: 200rpx;
    border: 1rpx solid #ccc;
}

.body {
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 10rpx;
}

.body>view {
    width: 95%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
    margin: 0 auto 0;
    border-bottom: 1rpx solid #f7f7f7;
    box-sizing: border-box;
}

.body>view:last-child {
    border: none;
}

.body>view view {
    display: inline-block;
    vertical-align: top;
}

.body>view view:nth-child(1) {
    width: 20%;
    height: 100%;
}

.body>view view:nth-child(2) {
    width: 80%;
    height: 100%;
}

.body>view view input {
    width: 100%;
    height: 100%;
}

.body>view view view {
    width: 100%;
    height: 100%;
}

.foot {
    width: 100%;
    height: auto;
    background: #fff;
    margin-top: 10rpx;
}

.foot>view:nth-child(1) {
    width: 95%;
    height: 80rpx;
    font-size: 30rpx;
    line-height: 80rpx;
    margin: 0 auto 0;
    border-bottom: 1rpx solid #f7f7f7;
}

.foot>view:nth-child(2) {
    width: 95%;
    margin: 0 auto 0;
    padding: 0 0 20rpx 0;
}

.radio {
    display: block;
    zoom: 80%;
    margin-top: 20rpx;
    font-size: 30rpx;
}

button {
    width: 95%;
    height: 80rpx;
    background: #ED414A;
    color: #fff;
    font-size: 28rpx;
    line-height: 80rpx;
    margin-top: 20rpx;
}